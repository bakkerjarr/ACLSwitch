#
# ACL rules for acl_switch
#
# This file is used to specify policies and rules. The information is
# loaded on application start up.
#
# Note that policies should be provided first if they are needed.
#
# To specify a policy use:
#   {"policy":"<policy name here>"}
#
# To specify a rule use:
#   {"rule":{"ip_src":"", "ip_dst":"", "tp_proto":"", "port_src":"", "port_dst":"", "policy":""}}
#
# To specify a rule with time enforcement (where "time_duration is in seconds"):
#   {"rule_time":{"ip_src":"", "ip_dst":"", "tp_proto":"", "port_src":"", "port_dst":"", "policy":"", "time_start":"", "time_duration":""}}

{"policy":"gateway"}
{"policy":"quarantine"}
{"rule":{"ip_src":"10.0.0.3", "ip_dst":"10.0.0.1", "tp_proto":"*", "port_src":"*", "port_dst":"*", "policy":"quarantine"}}
{"rule":{"ip_src":"10.0.0.1", "ip_dst":"10.0.0.2", "tp_proto":"*", "port_src":"*", "port_dst":"*", "policy":"default"}}
{"rule_time":{"ip_src":"10.0.0.2", "ip_dst":"10.0.0.3", "tp_proto":"*", "port_src":"*", "port_dst":"*", "policy":"default", "time_start":"16:47", "time_duration":"60"}}


# To specify a rule for a blacklist or whitelist entry:
#   {"list":{"ip_src":"", "ip_dst":"", "tp_proto":"", "port_src":"", "port_dst":"", "policy":"", "rule_list":""}}
#

{"rule":{"ip_src":"10.0.0.1", "ip_dst":"10.0.0.2", "tp_proto":"*", "port_src":"*", "port_dst":"*", "policy":"default","rule_list":"whitelist"}}

{"rule":{"ip_src":"10.0.0.2", "ip_dst":"10.0.0.3", "tp_proto":"*", "port_src":"*", "port_dst":"*", "policy":"default","rule_list":"blacklist"}}

